@model CadastroClientes.Models.ClienteCadastroViewModel



@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h4>Cadastro de Clientes</h4>
<a href="/Home/Index">Página inicial</a>
<br />
<br />

@using (Html.BeginForm())
{
    @*<div class="text-danger">
        @Html.ValidationSummary()
    </div>*@

    <label>Nome do Cliente:</label>
    @Html.TextBoxFor(model => model.Nome,
        new { @class = "form-control col-md-4" })
    @Html.ValidationMessageFor(x => x.Nome, "", new { @class = "text-danger" })
    <br />

    <label>Email do Cliente:</label>
    @Html.TextBoxFor(model => model.Email,
        new { @class = "form-control col-md-4" })
    @Html.ValidationMessageFor(x => x.Email,"", new { @class= "text-danger"})
    <br />

    <input type="submit" value="Cadastrar Cliente"
           class="btn btn-success" />
    <br />
    <br />

    <strong>@ViewData["Mensagem"]</strong>
}




